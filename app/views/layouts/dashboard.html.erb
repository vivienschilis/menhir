<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
	"http://www.w3.org/TR/html4/loose.dtd">

<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">
	<title><%= h(yield(:title) || "Teamshack.net - Manage, publish") %></title>

	<%= stylesheet_link_tag 'base.css' %>
	<%= stylesheet_link_tag 'themes/teamshack/style.css' %>

	<%= javascript_include_tag :defaults %>

  <%= yield(:head) %>
	

</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="index.html">Dashboard</a></h1>
      <div id="user-navigation">
        <ul>
          <li><%= link_to "My info", edit_user_path(current_user) %></li>
          <li><%= link_to "Logout", logout_path %></li>
        </ul>
        <div class="clear"></div>
      </div>      
      <div id="main-navigation">
        <ul>
          <li class="first <%= controller_is_selected('projects') %>"><%= link_to "Dashboard", root_path %></li>
          <li class="<%= controller_is_selected('users') %>"><%= link_to "Users", users_path %></li>
        </ul>
        <div class="clear"></div>
      </div>
    </div>    
    <div id="wrapper">
	    <div class="flash">
				<% if flash[:notice] %>
         <div class="message notice">
           <p><%=flash[:notice]%></p>
         </div>
				<% end %>
				
				<% if flash[:warning] %>
         <div class="message warning">
           <p><%=flash[:warning]%></p>
         </div>           
     		<% end %>

 				<% if flash[:error] %>
        <div class="message error">
           <p><%=flash[:error]%></p>
         </div>
				<% end %>
			</div>
	
      <div id="main">
					<div id="center_display" class="content">
						<%= yield  %>
						<div style="height:50px;"></div>
					</div>
			</div>
	<!-- ######### SIDEBAR ########## -->

	<div id="sidebar">
			<%= yield :sidebar %>
	</div>

</body>
</html>
