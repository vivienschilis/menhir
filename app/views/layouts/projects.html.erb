<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
	"http://www.w3.org/TR/html4/loose.dtd">

<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">
	<title><%= h(yield(:title) || "Teamshack.net - Manage, publish") %></title>

	<%= stylesheet_link_tag 'base.css' %>
	<%= stylesheet_link_tag 'themes/teamshack/style.css' %>
	<%= stylesheet_link_tag 'style.css' %>

	<%= javascript_include_tag :defaults %>

  <%= yield(:head) %>
	

</head>
<body>
  <div id="container">
    <div id="header">
      <h1><%=link_to @project.name, @project %></h1>
      <div id="user-navigation">
        <ul>
          <li><%= link_to "Back to my projects", dashboard_path %></li>
          <li><%= link_to "Settings", edit_project_path(@project) %></li>
          <li><%= link_to "Logout", logout_path %></li>
        </ul>
        <div class="clear"></div>
      </div>      
      <div id="main-navigation">
        <ul>
          <li class="first <%= controller_is_selected('projects') %>"><%= link_to "Projects", @project %></li>
          <li class="<%= controller_is_selected('milestones') %>"><%= link_to "Milestones", project_milestones_path(@project) %></li>
          <li class="<%= controller_is_selected('todo_lists') %>"><%= link_to "To-Dos", project_todo_lists_path(@project) %></li>
        </ul>
        <div class="clear"></div>
      </div>
    </div>    
    <div id="wrapper">
	
	    <div class="flash">
				<% if flash[:notice] %>
         <div class="message notice">
           <p><%=flash[:notice]%></p>
         </div>
				<% end %>
				
				<% if flash[:warning] %>
         <div class="message warning">
           <p><%=flash[:warning]%></p>
         </div>           
     		<% end %>

 				<% if flash[:error] %>
        <div class="message error">
           <p><%=flash[:error]%></p>
         </div>
				<% end %>
			</div>
			
      <div id="main">
					<div id="center_display" class="content">
  						<%= yield  %>
						<div style="height:50px;"></div>
					</div>
			</div>
	<!-- ######### SIDEBAR ########## -->

	<div id="sidebar">
			<%= yield :sidebar %>
	</div>

</body>
</html>
