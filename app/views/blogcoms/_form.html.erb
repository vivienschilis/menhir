<% form_for @blogcom do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :poster %><br />
    <%= f.text_field :poster %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :blogpost_id %><br />
    <%= f.text_field :blogpost_id %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :public_id %><br />
    <%= f.text_field :public_id %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
